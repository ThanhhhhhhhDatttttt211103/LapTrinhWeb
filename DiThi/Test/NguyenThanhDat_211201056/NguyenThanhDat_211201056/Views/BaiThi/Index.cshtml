@{
	Layout = "~/Views/Shared/NguyenThanhDat_Layout.cshtml";
}
@model IEnumerable<NguyenThanhDat_211201056.Models.Entities.Product>
<div id="mainright" class="agileinfo-ads-display col-md-9">
	<div class="wrapper">
		<div class="content_right">
			@foreach (var item in Model)
			{
				<div class="col-xs-4 product-men">
					<div class="men-pro-item">
						<div class="men-thumb-item">
							<img src="~/ThanhDat/images/@item.Image" alt="">
						</div>
						<div class="item-info-product ">
							<h4>
								<a href="single.html">@item.Name</a>
							</h4>
							<div class="info-product-price">
								<span class="item_price">$@item.UnitPrice</span>
							</div>
							<div class="snipcart-details">
								<a asp-controller="BaiThi" asp-action="Edit" asp-route-id="@item.Id" class="button">Edit</a>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>

@section Scripts{
	<script>
		$("input#btnSearch").click(function (e) {
			var keyword = $("#keyword").val();
			var data = { keyword: keyword };
			//alert(keyword)
			$.ajax({
				url: "/BaiThi/SanPhamFilter",
				data: data,
				success: function (response) {
					$("div.content_right").html(response);
				}
			});
		});

	</script>
}